@{
    ViewBag.Title = "Home Page";
}
@section Styles {
    <link href="~/css/style.css" rel="stylesheet" />
}

<style>
    .carousel-container {
        position: relative;
        width: 75%;
        margin: auto;
        overflow: hidden;
        border: 2px solid #ddd;
        border-radius: 10px;
    }

    .carousel-slide {
        display: flex;
        transition: transform 0.5s ease-in-out;
    }

        .carousel-slide img {
            width: 100%;
            height: auto;
            border-radius: 10px;
        }

    button.prev,
    button.next {
        position: absolute;
        top: 50%;
        transform: translateY(-50%);
        background-color: rgba(0, 0, 0, 0.5);
        color: white;
        border: none;
        padding: 10px;
        cursor: pointer;
        border-radius: 50%;
        font-size: 18px;
        z-index: 10;
    }

    button.prev {
        left: 10px;
    }

    button.next {
        right: 10px;
    }

        button.prev:hover,
        button.next:hover {
            background-color: rgba(0, 0, 0, 0.8);
        }
</style>

<div id="customCarousel" class="carousel-container">
    <div class="carousel-slide">
        <img src="~/images/istockphoto-962095876-612x612.jpg" alt="First Slide">
        <img src="~/images/istockphoto-1368593225-612x612.jpg" alt="Second Slide">
    </div>
    <button class="prev" onclick="moveSlide(-1)">&#10094;</button>
    <button class="next" onclick="moveSlide(1)">&#10095;</button>
</div>

<div class="about">
    <div class="containerv">
        <img src="~/images/card.jpg" alt="Icon" class="icon">
        <h1>About Us</h1>
        <p>
            This e-wallet system will allow users to withdraw, deposit, and transfer funds,
            while administrators manage the application, user accounts, and operational rules.
            This e-wallet application is designed as a secure digital payment system accessible
            across multiple platforms (web and mobile).
        </p>
    </div>
</div>

<div class="back">
    <img src="~/images/istockphoto-1368593225-612x612.jpg" alt="e-wallet" class="back--img">
</div>

<script>
    let currentSlide = 0;

    function moveSlide(direction) {
        const slides = document.querySelector(".carousel-slide");
        const totalSlides = slides.children.length;
        const slideWidth = slides.children[0].clientWidth;

        currentSlide += direction;

        if (currentSlide < 0) {
            currentSlide = totalSlides - 1;
        } else if (currentSlide >= totalSlides) {
            currentSlide = 0;
        }

        slides.style.transform = `translateX(-${currentSlide * slideWidth}px)`;
    }
</script>
